package com.demo;

public class CountNegativesInMatrix {

    public static int countNegatives(int[][] grid) {
        int totalRows = grid.length;
        int totalCols = grid[0].length;
        int row = 0, col = totalCols - 1, count = 0;

        while (row < totalRows && col >= 0) {
            if (grid[row][col] < 0) {
                col--;
                count += totalRows - row;
            } else {
                row++;
            }
        }

        return count;
    }

    public static void main(String[] args) {
        // Example usage
        int[][] exampleGrid = {
            {4, 3, 2, 1},
            {3, 2, 1, -1},
            {1, 1, -1, -2},
            {-1, -1, -2, -3}
        };

        int result = countNegatives(exampleGrid);
        System.out.println("Number of negative numbers in the matrix: " + result);
    }
}